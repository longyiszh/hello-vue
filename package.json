{
  "name": "hello-vue",
  "description": "Helping wcxaaa learn vue",
  "version": "0.2.0",
  "author": "Valorad <wcxaaa@gmail.com>",
  "private": true,
  "scripts": {
    "start": "node dist/server/hello-vue",
    "serve": "npm run serve:c",
    "serve:c": "cross-env NODE_ENV=development webpack-dev-server --config webpack/w.c.client.spa --progress --inline --hot",
    "build": "npm run build:c && npm run build:s",
    "build:c": "cross-env NODE_ENV=production webpack --config webpack/w.c.client.spa --progress --hide-modules",
    "build:s": "cross-env NODE_ENV=production webpack --config webpack/w.c.server",
    "build:ssr": "cross-env NODE_ENV=production webpack --config webpack/w.c.client.ssr && cross-env NODE_ENV=production webpack --config webpack/w.c.server.ssr"
  },
  "optionalDependencies": {
    "axios": "^0.17.0",
    "babel-polyfill": "^6.26.0",
    "rxjs": "^5.4.3",
    "vue": "^2.5.13",
    "vue-class-component": "^6.2.0",
    "vue-resource": "^1.3.4",
    "vue-router": "^3.0.1",
    "vue-rx": "^5.0.0"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-static": "^4.0.2",
    "vue-server-renderer": "^2.5.13"
  },
  "devDependencies": {
    "@types/koa": "^2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa-send": "^4.1.1",
    "@types/koa-static": "^4.0.0",
    "@types/node": "^9.4.6",
    "autoprefixer": "^7.2.5",
    "awesome-typescript-loader": "^3.5.0",
    "clean-webpack-plugin": "^0.1.18",
    "copy-webpack-plugin": "^4.3.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.2",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "ts-loader": "^3.0.5",
    "typescript": "^2.7.2",
    "vue-loader": "^14.1.0",
    "vue-style-loader": "^3.1.2",
    "vue-template-compiler": "^2.5.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.6.0"
  }
}
